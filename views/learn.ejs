<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiple Cards Page</title>
    <style>
        .card {
          background-color: #fff;
          border-radius: 5px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          padding: 20px;
          margin-bottom: 20px;
      }
      .card-image {
          width: 100%;
          max-width: 400px;
          height: auto;
          margin-bottom: 10px;
      }
      .audio-player {
          width: 100%;
          margin-bottom: 10px;
      }
      .comment-input {
          width: 100%;
          padding: 10px;
          border-radius: 5px;
          border: 1px solid #ccc;
          margin-bottom: 10px;
      }
      .submit-btn {
          padding: 10px 20px;
          background-color: #007bff;
          color: #fff;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }
      .submit-btn:hover {
          background-color: #0056b3;
      }
      .divider{
          display: grid;
          grid-template-columns: repeat(2,1fr);
          grid-gap:10px;
      }
      .heading{
          color:blue;
          font-size: 30px;
          text-align: center;
          padding: 20px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);

      }
      .main .no{
          text-align: center;
          font-size: 25px;
          font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
          font-weight: 100;

      }

      .video-player {
          width: 100%;
          height: auto;
      }

      .card-content {
          padding: 20px;
      }
      .files{
        display: grid;
        grid-template-columns:45% 45%;
        grid-gap:20px;
      }
      ul{
        display: flex;
        flex-direction: row;
      }
      ul li{
        list-style-type: none;
        padding: 10px;
        color: #007bff;
      }
      a{
        text-decoration: none;
      }
      a:hover{
        color:black
      }
      .nav{
        display: grid;
        grid-template-columns: 65% 30%;
        grid-gap:5%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 5px;
      }
       
    </style>
</head>
<body>
    <div class="main">
        <div class="files" >
            <div class="video" style="display: grid;grid-template-columns: repeat(1,1fr); grid-gap:20px;text-align: center;padding: 20px;">
                <% if(videodata.length>0) {%>
                  <% videodata.forEach(video => { %>
                <div class="card">
                <p><%= video._id %></p>
                  <video controls class="video-player">
                      <source src="<%= video.video %>" type="video/mp4">
                      Your browser does not support the video tag.
                  </video>
                  <div class="des">
                    <small style="color:black"><%= video.description%></small>
                  </div>
                  <form action="/comment" method="POST">
                    <textarea class="comment-input" name="comment" rows="4" placeholder="Enter your comment" required></textarea>
                    <input type="text" name="id"  value="<%=video._id %>">
                    <button type="submit" class="submit-btn">Submit</button>
                </form>
                </div>
             
          
                <% }) %>
                <% } else { %>
                  <p>No data available.</p>
                  <% } %>
                </div>
            <div class="image"  style="display: grid;grid-template-columns: repeat(1,1fr); grid-gap:20px;text-align: center;max-height: 400px ;padding: 20px;">
              <% if (data.length > 0) { %>
                <% data.forEach(item => { %>
                    <div class="card">
                      
                        <img class="card-image" src="<%= item.image%>" alt="Card Image">
                        <audio controls class="audio-player">
                            <source src="<%= item.audio %>" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                        <small style="color:black"><%= item.description %></small>
                        <form action="/comment" method="POST">
                            <textarea class="comment-input" name="comment" rows="4" placeholder="Enter your comment" required></textarea>
                            <input type="text"  name="id" disabled style="display: none;" value="<%=item._id %>">
                            <button type="submit" class="submit-btn">Submit</button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No data available.</p>
            <% } %>
            </div>
            </div>
    </div>
</body>
</html>